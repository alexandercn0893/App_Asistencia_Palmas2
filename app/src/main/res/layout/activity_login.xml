<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.Login">

    <RelativeLayout
        android:id="@+id/lyHeader"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/header_menu_principal"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblBienvenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/real_text_pro_book"
                android:text="ASISTENCIA"
                android:layout_marginTop="5dp"
                android:textColor="@color/darktech"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/separatorHeader"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/lblBienvenido"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:gravity="end">

            <ImageView
                android:id="@+id/imgLogo2"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:foregroundGravity="center"
                android:src="@drawable/logo_principal">

            </ImageView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lyHeader2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/lblLoguin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="2dp"
                android:fontFamily="@font/real_text_pro_book"
                android:paddingStart="15sp"
                android:text="INICIO DE SESIÃ“N"
                android:textColor="@color/darktech"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible" />


        </RelativeLayout>



    </RelativeLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="150dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="210dp"
            android:src="@drawable/logo_principal"
           />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="100dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginStart="120sp"
            android:orientation="vertical"
            app:backgroundTint="@null"
            android:background="@drawable/custom_input"
            app:cardBackgroundColor="@color/white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lyDNI"
                android:orientation="vertical">

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title, secondary and supporting text -->

                    <TextView
                        android:id="@+id/lblUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="4dp"
                        android:text="DOCUMENTO"
                        android:fontFamily="@font/real_text_pro_book"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/darktech"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="12sp" />

                    <EditText
                        android:id="@+id/txtUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/custom_input2"
                        android:drawablePadding="12dp"
                        android:textSize="15sp"
                        android:ems="10"
                        android:text=""
                        android:fontFamily="@font/real_text_pro_book"
                        android:hint="Ingrese su documento"
                        android:inputType="text"
                        android:padding="12dp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="50sp" />

                    <Button
                        android:id="@+id/btnVerificar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-30dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/custom_button"
                        android:text="Verificar"
                        android:textStyle="bold"
                        android:fontFamily="@font/real_text_pro_book"
                        android:textAlignment="center"
                        app:backgroundTint="@null"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/btnRegistrarExtranjero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone"
                        android:background="@drawable/custom_button"
                        android:text="Registrarme"
                        android:textAlignment="center"
                        app:backgroundTint="@null" />

                    <TextView
                        android:id="@+id/lblNombres"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="-10dp"
                        android:text=""
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnSiguiente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/custom_button"
                        android:text="Continuar"
                        android:textAlignment="center"
                        android:visibility="gone"
                        app:backgroundTint="@null" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">


                </LinearLayout>



            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>